<aura:component implements="flexipage:availableForAllPageTypes" controller="LightningDataTableController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    
    <aura:method name="setData" action="{!c.setData}" >
        <aura:attribute name="accountId" type="String" />
    </aura:method>
    
    <aura:registerEvent name="selectedRowChanged" type="c:contactsAppSelectedRowChanged" />
    
    <lightning:datatable 
        data            ="{!v.data}" 
        columns         ="{!v.columns}" 
        keyField        ="Id" 
        onrowselection  ="{! c.fireSelectedRowChanged }"
        maxRowSelection = "1"
    />
    
</aura:component>