<aura:component implements="flexipage:availableForAllPageTypes" controller="LightningDataTableController" aura:id="contactsLDT" >
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    
    <aura:method name="setData" action="{!c.setData}" >
        <aura:attribute name="accountId" type="String" />
    </aura:method>
    
    <lightning:datatable data="{!v.data}" columns="{!v.columns}" keyField="Id" />
    
</aura:component>
